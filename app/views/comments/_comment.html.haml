.comment{ :class => comment_counter.even? ? "even_comment_row" :"odd_comment_row" }                  
  .author= comment.user.displayname
  .created_at= "#{distance_of_time_in_words_to_now(comment.created_at)} ago"
  .body!= comment.body
  - if can? :destroy, comment 
    != button_to "Delete comment", documentation_page_comment_path(comment.documentation_page, comment), :method => :delete