!= title "Adding comment on #{@documentation_page.title}"
- form_for([@documentation_page, @comment]) do |f|
  = render :partial => 'shared/errors', :locals => {:obj => @comment, :sym => :comment}
  .yui-gf
    .yui-u.first.form_label
      != f.label :body, "Comment"
    .yui-u
      != f.text_area :body
  .yui-gf
    .yui-u
      != submit_tag "Submit comment"

%h2 Live preview
.wmd-preview